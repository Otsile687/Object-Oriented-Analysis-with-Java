<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="OpenAccountController"
            prefHeight="500.0" prefWidth="550.0">
   
   <children>
      <VBox spacing="15.0" alignment="CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Label text="OPEN ACCOUNT">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            
            <!-- Minimum Deposit Requirements Box -->
            <VBox spacing="8.0" style="-fx-border-color: #3366cc; -fx-border-width: 1; -fx-padding: 10; -fx-background-color: #f0f8ff;">
               <children>
                  <Label text="Minimum Deposit Requirements:" style="-fx-font-weight: bold; -fx-text-fill: #003366;" />
                  <Label text="• Savings Account: $50.00 minimum" style="-fx-text-fill: #003366;" />
                  <Label text="• Checking Account: $25.00 minimum" style="-fx-text-fill: #003366;" />
                  <Label text="• Investment Account: $500.00 minimum" style="-fx-text-fill: #003366;" />
               </children>
            </VBox>
            
            <GridPane hgap="10.0" vgap="12.0">
               <columnConstraints>
                  <ColumnConstraints minWidth="120.0" />
                  <ColumnConstraints minWidth="250.0" />
               </columnConstraints>
               
               <children>
                  <Label text="Customer ID:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                  <TextField fx:id="customerIdField" GridPane.rowIndex="0" GridPane.columnIndex="1" promptText="Enter customer ID" />
                  
                  <Label text="Account Type:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                  <ComboBox fx:id="accountTypeComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" promptText="Select account type" />
                  
                  <Label text="Initial Deposit:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
                  <TextField fx:id="initialDepositField" GridPane.rowIndex="2" GridPane.columnIndex="1" promptText="Enter deposit amount" />
                  
                  <Label text="Account Number:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
                  <TextField fx:id="accountNumberField" GridPane.rowIndex="3" GridPane.columnIndex="1" promptText="Auto-generated" editable="false" />
               </children>
            </GridPane>
            
            <HBox spacing="15.0" alignment="CENTER">
               <children>
                  <Button fx:id="openAccountButton" text="Open Account" onAction="#handleOpenAccount" 
                         style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
                  <Button fx:id="generateNumberButton" text="Generate Number" onAction="#handleGenerateNumber" />
                  <Button fx:id="backButton" text="Back to Menu" onAction="#handleBack" />
               </children>
            </HBox>
            
            <Label fx:id="messageLabel" wrapText="true" maxWidth="450.0" 
                   style="-fx-font-weight: bold; -fx-text-fill: #333333;" />
         </children>
      </VBox>
   </children>
</AnchorPane>